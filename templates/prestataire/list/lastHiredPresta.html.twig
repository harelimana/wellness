{% extends '/prestataire/layoutPrestataire.html.twig' %}
{% block details %}
    <div class="cards-simple-wrapper">
        <div class="background-primary col-md-12">
            <h3 class="text-center">Our last hired Prestataires </h3>
        </div>
        <div class="row">
            {% if listLastPrestataire is not empty %}
            {% for p in listLastPrestataire %}
            <div class="col-sm-6 col-md-4 col-lg-3">
                {% if p.logo is not null %}
                <div class="card-simple" style="background-image: url('{{ p.logo.Image }}')">
                    {% else %}
                    <div class="card-simple"
                         style="background-image:url('{{ asset('assets/img/tmp/product-1.jpg') }}') !important ;">
                        {% endif %}
                        <div class="card-simple-background">
                            <div class="card-simple-content">
                                <h2>{{ p.name }}</h2>
                                <div class="card-simple-actions">
                                    <a href="{{ path('detailsPrestataire',{'slug':p.slug}) }}" class="fa fa-search"></a>
                                </div><!-- /.card-simple-actions -->
                            </div><!-- /.card-simple-content -->
                            {% if p.commune is not empty %}
                                <div class="card-simple-label">{{ p.commune.Commune }}</div>
                            {% endif %}


                        </div><!-- /.card-simple-background -->
                    </div><!-- /.card-simple -->
                </div><!-- /.col-* -->
                {% endfor %}
                {% else %}
                    <div class="caution">
                        <h2>{{ error.msg }}</h2>
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}