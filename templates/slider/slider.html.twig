
<div class="mb80">
    <div class="hero-slider">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                {% for s in highligtedServices %}

                {% if loop.index0 == 0 %}
                    {% set active='active' %}
                {% else %}
                    {% set active='' %}
                {% endif %}
                <div class="item {{ active }}" style="height:400px;">
                    <h2 class="text-center">{{ p.description }}</h2>
                    <div class="item-bg"></div>
                <img src={{ s.image }} alt="{{ s.name }}">

                <div class="carousel-caption">
                    <div class="hero-slider-content">
                        <a href="{{ path('serviceDetails',{'slug':s.slug}) }}"><h1>{{ s.name }}</h1></a>
                    </div><!-- /.hero-slider-content -->
                    <div class="hero-slider-actions">
                        <a href="{{ path('serviceDetails',{'slug':s.slug}) }}"><i class="fa fa-search"></i></a>
                    </div><!-- /.hero-slider-actions -->
                </div><!-- /.carousel-caption -->
            </div><!-- /.item -->

            {% endfor %}
        </div><!-- /.carousel-inner -->

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <i class="fa fa-long-arrow-left"></i>
        </a>

        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <i class="fa fa-long-arrow-right"></i>
        </a>
    </div>
</div><!-- /.hero-slider -->